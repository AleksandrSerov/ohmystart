{
	"name": "ohmystart",
	"version": "1.0.0",
	"description": "East start react project",
	"scripts": {
		"start": "tsc --noEmit --watch & parcel ./src/index.html --port 8080 --open --watch-for-stdin",
		"test": "npm run test:unit && npm run test:e2e",
		"test:unit": "jest",
		"test:e2e": "start-server-and-test start :8080 \"cypress run\"",
		"test:e2e:open": "start-server-and-test start :8080 \"cypress open\"",
		"lint": "npm run lint:css && npm run lint:scripts",
		"lint:css": "stylelint ./src/**/*.css",
		"lint:scripts": "eslint .",
		"format": "prettier-eslint --write \"./{src,cypress}/**/*.{ts,tsx,css}\"",
		"build": "rm -rf dist && parcel build --no-source-maps ./src/index.html",
		"postinstall": "npx simple-git-hooks"
	},
	"author": "Aleksandr Serov",
	"license": "ISC",
	"dependencies": {
		"classnames": "^2.3.1",
		"parcel": "^2.2.1",
		"react": "18.0.0",
		"react-dom": "18.0.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^16.2.3",
		"@commitlint/config-conventional": "^16.2.1",
		"@cypress/webpack-preprocessor": "^5.9.1",
		"@testing-library/cypress": "^8.0.1",
		"@types/jest": "^27.4.1",
		"@types/react": "^18.0.5",
		"@types/react-dom": "^18.0.1",
		"@typescript-eslint/eslint-plugin": "^4.32.0",
		"@typescript-eslint/parser": "^4.32.0",
		"add": "^2.0.6",
		"autoprefixer": "^10.4.4",
		"cypress": "^9.5.3",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-react": "^7.26.1",
		"jest": "^27.2.4",
		"lint-staged": "^12.3.7",
		"parcel-transformer-ts-css-modules": "^1.0.14",
		"postcss": "^8.3.8",
		"postcss-custom-properties": "^12.1.4",
		"postcss-import": "^14.0.2",
		"postcss-modules": "^4.2.2",
		"postcss-nested": "^5.0.6",
		"postcss-url": "^10.1.3",
		"prettier": "2.5.1",
		"prettier-eslint": "^13.0.0",
		"prettier-eslint-cli": "^5.0.1",
		"simple-git-hooks": "^2.6.1",
		"start-server-and-test": "^1.14.0",
		"stylelint": "^14.3.0",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-config-standard": "^24.0.0",
		"stylelint-prettier": "^1.2.0",
		"ts-jest": "^27.0.5",
		"ts-loader": "^9.2.6",
		"typescript": "^4.4.3",
		"typescript-plugin-css-modules": "^3.4.0",
		"webpack": "^5.65.0",
		"yarn": "^1.22.17"
	},
	"engines": {
		"node": "16.x"
	},
	"browserslist": {
		"production": [
			"last 2 versions",
			"ie >= 11",
			"Android >= 5",
			"iOS >= 9"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"jest": {
		"preset": "ts-jest",
		"testMatch": [
			"**/*.test.ts?(x)"
		]
	},
	"lint-staged": {
		"{src,cypress}/**/*.{ts,tsx}": [
			"prettier-eslint --write",
			"eslint"
		],
		"*.css": [
			"prettier-eslint --write",
			"stylelint"
		]
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged",
		"commit-msg": "npx commitlint -e"
	}
}
