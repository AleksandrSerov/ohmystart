{
    "name": "ohmystart",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "parcel build ./src/index.html",
        "test": "test:unit",
        "test:unit": "jest",
        "test:e2e:open": "npm run start & cypress open",
        "start": "tsc --noEmit --watch & parcel ./src/index.html --port 8080",
        "lint:css": "stylelint ./src/**/*.css",
        "lint:scripts": "eslint .",
        "lint": "npm run lint:css & npm run lint:scripts",
        "format": "prettier-eslint --write \"./{src,cypress}/**/*.{ts,tsx,css}\"",
        "postinstall": "npx npx simple-git-hooks"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "parcel": "^2.0.0-nightly.843",
        "react": "17.0.2",
        "react-dom": "17.0.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^13.2.0",
        "@commitlint/config-conventional": "^13.2.0",
        "@cypress/webpack-preprocessor": "^5.9.1",
        "@testing-library/cypress": "^8.0.1",
        "@types/jest": "^27.0.2",
        "@types/react": "^17.0.24",
        "@types/react-dom": "^17.0.9",
        "@typescript-eslint/eslint-plugin": "^4.32.0",
        "@typescript-eslint/parser": "^4.32.0",
        "autoprefixer": "^10.3.6",
        "cypress": "^8.5.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-react": "^7.26.1",
        "jest": "^27.2.4",
        "lint-staged": "^11.1.2",
        "parcel-bundler": "^1.12.5",
        "postcss": "^8.3.8",
        "postcss-custom-properties": "^12.0.0",
        "postcss-import": "^14.0.2",
        "postcss-modules": "^4.2.2",
        "postcss-nested": "^5.0.6",
        "postcss-url": "^10.1.3",
        "prettier": "2.4.1",
        "prettier-eslint": "^13.0.0",
        "prettier-eslint-cli": "^5.0.1",
        "simple-git-hooks": "^2.6.1",
        "stylelint": "^13.13.1",
        "stylelint-config-standard": "^22.0.0",
        "ts-jest": "^27.0.5",
        "ts-loader": "^9.2.6",
        "typescript": "^4.4.3"
    },
    "browserslist": {
        "production": [
            "last 2 versions",
            "ie >= 11",
            "Android >= 5",
            "iOS >= 9"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "jest": {
        "preset": "ts-jest",
        "testMatch": [
            "**/*.test.ts?(x)"
        ]
    },
    "lint-staged": {
        "{src,cypress}/**/*.{ts,tsx}": [
            "prettier-eslint --write",
            "eslint"
        ],
        "*.css": [
            "prettier-eslint --write",
            "stylelint"
        ]
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged",
        "commit-msg": "npx commitlint --edit \"$1\""
    }
}
